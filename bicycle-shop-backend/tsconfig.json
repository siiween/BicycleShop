{
  "compilerOptions": {
    "target": "ES6",                        // Target ECMAScript 6
    "module": "commonjs",                   // Use CommonJS module system
    "rootDir": "./src",                     // Root directory of your source files
    "outDir": "./dist",                     // Output directory for compiled JavaScript files
    "strict": true,                         // Enable strict type-checking options
    "esModuleInterop": true,                // Enable interoperability between CommonJS and ES Modules
    "emitDecoratorMetadata": true,          // Emit decorator metadata (required for TypeORM)
    "experimentalDecorators": true,         // Enable experimental support for decorators
    "skipLibCheck": true,                   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file

    "baseUrl": "src",
    "paths": {
      "@entities/*": ["database/entities/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@errors/*": ["errors/*"],
      "@seeders/*": ["seeders/*"],
      "@database/*": ["database/*"]
    }
  },
  "include": ["src/**/*"],                  // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]               // Exclude the node_modules directory
}
